@model SoftPortalBot.Model.DataBaseTable.Request

@{
    ViewData["Title"] = "Удаление заявки";
}

<div align="center">
    <h1>Удаление заявки</h1>
    <h3>Вы точно хотите удалить заявку?</h3>
    <div style="margin: 10px;">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Приложение
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Application.Name)
            </dd>
            <dt class="col-sm-2">
                Создатель заявки
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Creator.Login)
            </dd>
            <dt class="col-sm-2">
                Исполнитель
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Executor.Login)
            </dd>
            <dt class="col-sm-2">
                Причина обращения
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestReason.Name)
            </dd>
            <dt class="col-sm-2">
                Статус заявки
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestStatus.Name)
            </dd>
            <dt class="col-sm-2">
                Время создания
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreateTime)
            </dd>
            <dt class="col-sm-2">
                Описание проблемы
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProblemDescription)
            </dd>
            <dt class="col-sm-2">
                Ссылка на вложения
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AttachmentsLink)
            </dd>
            <dt class="col-sm-2">
                Номер компьютера
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ComputerNumber)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-action="Index">Вернуться назад</a>
        </form>
    </div>
</div>
