@model SoftPortalBot.Model.DataBaseTable.ProblemResponse

@{
    ViewData["Title"] = "Создать ответ";
}
<div align="center">
    <h1>Создание ответа базы знаний</h1>

    <div style="overflow-y: auto; height: 680px;">
        <div class="col-md-4" style="margin: 10px;">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ApplicationId" class="control-label">Приложение</label>
                    <select asp-for="ApplicationId" class="form-control" asp-items="ViewBag.ApplicationId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Название ответа</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Описание ответа</label>
                    <textarea asp-for="Description" class="form-control" style="height: 70px; width: 800px; word-break: break-word; position: relative; left: -10%; resize: none;"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label">Содержание ответа</label>
                    <textarea asp-for="Content" class="form-control" style="height: 500px; width: 800px; word-break: break-word; position: relative; left: -10%; resize: none; "></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin: 10px;">
                    <input type="submit" value="Создать" class="btn btn-primary" />
                    <a class="btn btn-danger" asp-action="Index">Вернуться назад</a>
                </div>
            </form>
        </div>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
