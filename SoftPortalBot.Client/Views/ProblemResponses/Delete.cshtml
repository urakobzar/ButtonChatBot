@model SoftPortalBot.Model.DataBaseTable.ProblemResponse

@{
    ViewData["Title"] = "Удаление ответа";
}
<div align="center">
    <h1>Удаление ответа из базы знаний</h1>

    <h3>Вы точно хотите удалить ответ?</h3>
    <div style="margin: 10px;">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Приложение
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Application.Name)
            </dd>
            <dt class="col-sm-2">
                Название ответа
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Описание ответа
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                Содержание ответа
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Content)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" /> 
            <a class="btn btn-secondary" asp-action="Index">Вернуться назад</a>
        </form>
    </div>
</div>