@model SoftPortalBot.Model.DataBaseTable.UserResponsibleGroup

@{
    ViewData["Title"] = "Удаление связи пользователь/группа";
}
<div align="center">
    <h1>Удаление связи пользователь/ответственная группа</h1>

    <h3>Вы точно хотите удалить связь?</h3>
    <div style="margin: 10px;">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Пользователь
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Surname) 
                @Html.DisplayFor(model => model.User.Name)  
                @Html.DisplayFor(model => model.User.Patronymic)
            </dd>
            <dt class="col-sm-2">
                Ответственная группа
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ResponsibleGroup.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-action="Index">Вернуться назад</a>
        </form>
    </div>
</div>